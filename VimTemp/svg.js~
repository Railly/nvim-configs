import styled, { css } from 'styled-components'

export const Moon = styled.svg`
  fill: #fff;
  transition: 0.3s;
  ${({ theme }) =>
    theme.name === 'light' &&
    css`
      transform: translateX(-3em);
      opacity: 0;
    `};
`
export const Sun = styled.svg`
  fill: #ffdf6e;
  transition: 0.3s;
  ${({ theme }) =>
    theme.name === 'dark' &&
    css`
      transform: translateX(3em);
      opacity: 0;
    `};
`
