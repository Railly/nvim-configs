import React from 'react'
import { StyleSheet } from 'react-native'

const styles = StyleSheet.create({
  text: {
    fontSize: 12,
    color: 'grey'
  },
  bold: {
    fontWeight: 'bold'
  },
  blue: {
    color: 'blue'
  },
  subheading: {
    fontSize: 20
  }
})

export default function StyledText ({ blue, bold, children, big, small }) {
  const textStyles = [
    styles.text,
    blue && styles.blue,
    big && styles.big,
    small && styles.small,
    bold && styles.bold
  ]
  return <Text style={textStyles}>{children}</Text>
}
